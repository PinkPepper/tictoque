{% trans_default_domain 'FOSUserBundle' %}

{% block head %}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>
{% endblock %}

{% block fos_user_content %}
    <style>
        body article, body aside, body details, body figcaption, body figure, body footer, body header, body hgroup, body main, body menu, body nav, body section, body summary {
            display: block;
        }
    </style>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <content>
        <section class="user_login">
            <img src="{{ asset('img/logo_CMS.png') }}">

            <form action="{{ path("fos_user_security_check")}}" class="login" method="post" class="login">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div>
                    <label for="username">{{ 'Pseudo '|trans }}</label>
                    <input class="input_s" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div>
                    <label for="password">{{ 'Mot de passe '|trans }}</label>
                    <input class="input_s" type="password" id="password" name="_password" required="required" />
                </div>

                <div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'Se souvenir de moi '|trans }}</label>
               </div>
               <br>
                <button  class="button_p" type="submit" id="_submit" name="_submit">Se connecter</button>
            </form>


            <a href="mdp.html" class="password_recover">Mot de passe oubli√© ?</a>

        </section>
    </content>

{% endblock fos_user_content %}