{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid compte">
    <div class="compte_etape1">
        <div class="compte_head">
            <h4>ETAPE 1/2</h4>
            <h2><b>CRÉATION D'UN COMPTE</b></h2>
            <span>Information relative à votre compte utilisateur</span>
        </div>

        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register inscription'} }) }}
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">VOTRE NOM*</label>
                <div class="col-md-4">
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control input-md', 'placeholder': 'Nom'|trans}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">VOTRE PRENOM*</label>
                <div class="col-md-4">
                    {{ form_widget(form.prenom, { 'attr': {'class': 'form-control input-md', 'placeholder': 'Prenom'|trans } }) }}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">PSEUDO*</label>
                <div class="col-md-4">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control input-md', 'placeholder': 'Pseudo'|trans }}) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">TELEPHONE*</label>
                <div class="col-md-4">
                    {{ form_widget(form.telephone, { 'attr': {'class': 'form-control input-md', 'placeholder': '060102030405'|trans } }) }}
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">VOTRE EMAIL*</label>
                <div class="col-md-4">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control input-md', 'placeholder': 'MonEmail@yahoo.fr'|trans } }) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">MOT DE PASSE*</label>
                <div class="col-md-8 mail_input">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-md', 'placeholder': 'Mot de passe'|trans } }) }}
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-md', 'placeholder': 'Confirmation du mot de passe'|trans } }) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
        </div>

