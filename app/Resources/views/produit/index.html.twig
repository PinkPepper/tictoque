{% extends 'base.html.twig' %}

{% block body %}
    <section class="user_content">
        <content>

        <div class="nav_pos">
            <h1>Produits</h1> 
            <p>(8759)</p>
        </div>

        <div class="user_interact">
            <button class="button_p">Retour<img type="svg" src="img/puce-right.svg"></button>
            <button class="button_p add_product">Ajouter un produit<img type="svg" src="img/puce-right.svg"></button>
            
        </div>
            
        </content>

        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.prix }}</td>
                    <td> {% if produit.image == "" %}
                            Aucune image
                        {% else %}
                            <img src=" {{ asset('produits/' ~ produit.image ) }} " style="width: 10%; height: auto"></img>
                        {% endif %}
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="">ajouter au panier</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
