<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TicToque</title>

    <!-- Import Style Sheet -->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <!-- <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.min.css') }}"  media="screen,projection"/>
    <link type="text/scss" rel="stylesheet" href="sass/materialize.scss"  media="screen,projection"/> -->

    <!-- Compiled and minified CSS -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css"> -->

    <!-- Compiled and minified JavaScript -->
    <!--  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script> -->
</head>
<body>

<header>
    <a href="{{ path('homepage')}}" ><img class="logo_cms" src="{{ asset('img/logo_CMS.png') }}"></a>
    {% if app.user is not  null %}
        <div>
            <img class="pictoNavbar" src="{{ asset('users/' ~ app.user.image) }}">


            <span>{{ app.user.username }}</span><br>
            <span>{% if app.user.roles.0=="ROLE_ADMIN" %}
                    Administrateur
                {% else %}
                    Utilisateur
                {% endif %}
                </span>
        </div>

        <ul>
            <li><a href="{{ path('blog_index') }}">Blog</a></li>
            <li><img src="{{ asset('img/information-ico.svg') }}" type="svg"></li>
            <li><img src="{{ asset('img/notification-ico.svg') }}" type="svg"></li>
            <li><a href="{{ path('fos_user_security_logout') }}"><img src="{{ asset('img/deconnexion-ico.svg') }}" type="svg"></a></li>
        </ul>
    {% endif %}

    {% if app.user is null %}
        <ul>
            <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
            <li><a href="{{ path('blog_index') }}">Blog</a></li>
        </ul>
    {% endif %}

</header>

{% block menuAdmin %}{% endblock %}
{% block body %}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
    <script>tinymce.init({ selector:'.tiny',setup: function (editor) {
        editor.on('change', function () {
            editor.save();
        });
    }});</script>
{% endblock %}
</body>
</html>

