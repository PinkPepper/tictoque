{% extends 'backoffice/menuAdmin.html.twig' %}

{% block body %}
    <section>
        <div class="menu_top_cms">
            <h1>Points relais</h1>
            <a class="btn_01" href="{{ path('admin_point_relais_new') }}">Cr√©er un point relais</a>
        </div>

        <div class="cellule_background_cms">
            <table>
                <tr>
                    <td>Id</td>
                    <td>nom</td>
                    <td>adresse</td>
                    <td>latitude</td>
                    <td>longitude</td>
                    <td>Livreur</td>
                    <td>Actions</td>
                </tr>
                <tbody>
                {% for point in pointsRelais %}
                    <tr>
                        <td>{{ point.id }}</td>
                        <td>{{ point.nom }}</td>
                        <td>{{ point.adresse }}</td>
                        <td>{{ point.latitude }}</td>
                        <td>{{ point.longitude }}</td>
                        <td>{{ point.user.nom }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_point_relais_edit', { 'id': point.id }) }}"><img class="sizePicto" src="{{ asset('img/edit.svg') }}"></a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_point_relais_delete', { 'id': point.id }) }}" onclick="return confirm('Voulez-vous vraiment le supprimer ?')"><img class="sizePicto" src="{{ asset('img/delete.svg')}}"></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            
        </div>
    </section>
{% endblock %}
