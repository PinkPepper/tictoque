{% extends 'base.html.twig' %}

{% block body %}
    <section class="user_content">
        <content>

            <div class="nav_pos">
                <h1>Produits</h1>
                <p>({{ produits|length }})</p>
            </div>

            <div class="user_interact">
                retour
            </div>

        </content>

        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.prix }}</td>
                    <td> {% if produit.image == "" %}
                            Aucune image
                        {% else %}
                            <img src=" {{ asset('produits/' ~ produit.image ) }} " style="width: 10%; height: auto"></img>
                        {% endif %}
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('menu_choix_boisson', { 'menu': menu.id,'id': produit.id }) }}">choisir</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
