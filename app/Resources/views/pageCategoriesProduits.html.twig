{% extends 'base.html.twig' %}

{% block body %}
    <section>

        {% block categories %}

            {% for categorie in categories %}
                <div>
                <a href="{{ path('categorie_show',{'id': categorie.id})}}">{{categorie.nom}}</a>
                <br>
                {% if categorie.image != "" %}
                    <a href="{{ path('categorie_show',{'id': categorie.id})}}">
                        <img src=" {{ asset('categories/' ~ categorie.image ) }} " style="width: 10%; height: auto">
                    </a>
                {% endif %}
                <br>
                </div>
            {% endfor %}

        {% endblock %}

        {% block produits %}{% endblock %}
    </section>
{% endblock %}