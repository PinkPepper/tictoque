
{% for point in pointsRelais %}
    <p>
    <input class="pt" type="radio" name="pointRelais" value="{{ point.id }}">
        <b>{{ point.nom }}</b> - {{ point.adresse }}
    </p>
{% endfor %}

{% if pointsRelais == [] %}
    Aucun point relais trouv√© pour cette adresse
{% else %}
    <div class="message"></div>
{% endif %}


<script>
    $( "input" ).on( "click", function() {
        const id = $( "input:checked" ).val();
        document.cookie = 'pointRelais=' + id;
    });
</script>

