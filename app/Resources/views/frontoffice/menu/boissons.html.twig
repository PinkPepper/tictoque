{% extends 'frontoffice/base.html.twig' %}

{% block title %}Menu - Boissons{% endblock %}

{% block body %}
    <section>
        <div class="titleTop text-center">
            <h1>Boissons</h1>
            <h4>Pour une petite soif !</h4>
        </div>
        <div class="row plats_semaine" style="margin: 0 auto;">
            <div class="col-lg-12 col-md-12 col-xs-12 menu_choix">
                {% for produit in produits %}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="showPlat">
                            <div class="showImgPlat">
                                <div class="overflowImg">
                                    <img class="img-responsive imgPlat" src="{{ asset('produits/'~produit.image) }}">
                                </div>
                                <a class="addToCart" href="{{ path('menu_choix_boisson', { 'id': produit.id }) }}">Choisir</a>
                            </div>
                            <div class="showDescPlat">
                                <p class="typeProduct">{{ produit.type|upper }}</p>
                                <div class="row">
                                    <h4 class="titleProduct col-lg-8 col-md-12 col-sm-12 col-xs-12">{{ produit.nom|upper }}</h4>
                                    <span class="prixProduct col-lg-2 col-md-6 col-md-6  col-xs-12 prix">{{ produit.prix }}â‚¬</span>
                                    <span class="descProduit col-lg-12 col-md-12 col-md-12 col-xs-12">{{ produit.description|raw }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
