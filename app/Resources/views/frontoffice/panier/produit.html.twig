
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" >
        <img src="{{ asset('produits/' ~ produit.image ) }}" style="width:100%; height: 100%;">
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 desc_prod" style="margin-top: 20px;">
        <h1 class="produit_nom">{{ produit.nom }}</h1>
        {% if produit.nbVotants is not null %}
            {% set max = produit.notation %}
            {% if produit.notation >= 1 %}
                {% set fin = 0 %}
                {% for i in 1..max %}
                    <span class="glyphicon glyphicon-star"></span>
                    {% set fin = fin + 1 %}
                {% endfor %}

                {% if fin != 5 %}
                    {% for i in fin..4 %}
                        <span class="glyphicon glyphicon-star glyphicon-star-off"></span>
                    {% endfor %}
                {% endif %}
            {% endif %}
            <span class="produit_avis">({{ produit.notation |number_format(2, '.', ',') }})</span>
        {% else %}
            Aucune note
        {% endif %}

        <p class="produit_desc">{{ produit.description | raw }}</p>

        <p class="produit_prix_solde">{{ produit.prix }}€</p>

        <div>
            <p class="produit_desc">Allergènes</p>
             {% for all in produit.allergenes %}
            <ul>
                <li>
                    {{all.nom}}
                </li>
            </ul>
            {% endfor %}
        </div>

    </div>
</div>

