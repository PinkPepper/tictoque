            error : function(resultat, statut, erreur){
                console.log("error");
                console.log(erreur);
            }
        });

    });

    $("div.choix_relais .bcr").on("click",function() {
        if($(this).find('input[type="radio"]').is(':checked')) {
            $("div.choix_relais .bcr").removeClass('sel_bk_color');
            $(this).addClass('sel_bk_color');
        }
    });
</script>

