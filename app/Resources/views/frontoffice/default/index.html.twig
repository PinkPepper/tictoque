{% extends 'frontoffice/footer.html.twig' %}

{% block body %}
	<div class="row home">
		<div class="col-lg-12 col-md-12 col-xs-12 Bandeau">
			<p>Régalez-vous, commandez des plats gastronomiques</p>
			<span>L'AmourFood permet aux estomacs exigeants d'être livrés sur leur lieu de travail.</span>
			<div>
				<a href="{{ path('produit_index') }}">Découvrir les plats</a>
				<a>Créer mon menu</a></a>
			</div>
		</div>
	</div>

	<div class="row plats_semaine">
		<div class="col-lg-12 col-md-12 col-xs-12 showPlatSemaine">
			<img class="center-block pictoHP" src="{{ asset('img/picto_fourchette.svg') }}">
			<h4 class="text-center titleCat">De nouveaux plats chaque semaine</h4>
			<h5 class="text-center subTitleCat">Commandez simplement sur lamourfood.fr !</h5>

			{% for produit in produits %}
				{% if loop.index0 < 3 %}
					<div class="col-lg-4 col-md-4 col-sm-4">
						<div class="showPlat">
							<div class="showImgPlat">
								<img style="height: 200px;width:310px;" class="img-responsive imgPlat" src="{{ asset('produits/'~produit.image) }}">
								<a class="addToCart">Ajouter</a>
							</div>
							<div class="showDescPlat">
								<p class="typeProduct">{{ produit.type|upper }}</p>
								<div class="row">
									<h4 class="titleProduct col-lg-8 col-md-12 col-sm-12 col-xs-12">{{ produit.nom|upper }}</h4>
									<i class="text-center dispoProduct col-lg-2 col-md-6 fa col-sm-6  col-xs-6 fa-circle"></i>
									<span class="text-center prixProduct col-lg-2 col-md-6 col-md-6  col-xs-6 prix">4€99</span>
									<span class="descProduit col-lg-12 col-md-12 col-md-12 col-xs-12">{{ produit.description|raw }}</span>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>

	<div class="row pointRelais center-block">
