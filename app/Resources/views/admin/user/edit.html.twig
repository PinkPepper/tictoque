{% extends 'menuAdmin.html.twig' %}

{% block body %}
    <section>
        <h1>Modifier un utilisateur</h1>
        <a class="btn_01" href="{{ path('admin_index') }}" >Retour</a>

        <div class="cellule_background_cms">
            {{ form_start(edit_form, { 'attr': {'class': 'form-group' } }) }}

            <label>Nom</label>
            {{ form_widget(edit_form.nom) }}
            {{ form_errors(edit_form.nom) }}

            <label>Prénom</label>
            {{ form_widget(edit_form.prenom) }}
            {{ form_errors(edit_form.prenom) }}


            <label>Username</label>
            {{ form_widget(edit_form.username, {'id':'user_mail'}) }}
            {{ form_errors(edit_form.username) }}


            <label>Image</label>
            {{ form_widget(edit_form.file) }}
            {{ form_errors(edit_form.file) }}


            <label>Email</label>
            {{ form_widget(edit_form.email) }}
            {{ form_errors(edit_form.email) }}


            <label>Téléphone</label>
            {{ form_widget(edit_form.telephone) }}
            {{ form_errors(edit_form.telephone) }}


            <label>Mot de passe</label>
            {{ form_widget(edit_form.plainPassword.first) }}
            {{ form_errors(edit_form.plainPassword.first) }}


            <label>Retapez votre mot de passe</label>
            {{ form_widget(edit_form.plainPassword.second) }}
            {{ form_errors(edit_form.plainPassword.second) }}



            <button class="button_p" type="submit"> Modifier l'utilisateur </button>

            {{ form_end(edit_form) }}
            <br>
            {{ form_start(delete_form) }}
            <button class="button_p" type="submit" onclick="return confirm('Voulez-vous vraiment le supprimer ?')">Supprimer</button>
            {{ form_end(delete_form) }}

            {{ form_end(edit_form) }}
        </div>
    </section>

{% endblock %}



