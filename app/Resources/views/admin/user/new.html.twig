{% extends 'menuAdmin.html.twig' %}

{% block body %}
    <section>
        <h1>Ajouter un utilisateur</h1>
        <a class="btn_01" href="{{ path('admin_index') }}" >Retour</a>

        <div class="cellule_background_cms">
        {{ form_start(form, { 'attr': {'class': 'form-group' } }) }}

            <label>Nom</label>
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}

            <label>Prénom</label>
                {{ form_widget(form.prenom) }}
                {{ form_errors(form.prenom) }}


            <label>Username</label>
                {{ form_widget(form.username, {'id':'user_mail'}) }}
                {{ form_errors(form.username) }}


            <label>Image</label>
                {{ form_widget(form.file) }}
                {{ form_errors(form.file) }}


            <label>Email</label>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}


            <label>Téléphone</label>
                {{ form_widget(form.telephone) }}
                {{ form_errors(form.telephone) }}


            <label>Mot de passe</label>
                {{ form_widget(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}


            <label>Retapez votre mot de passe</label>
                {{ form_widget(form.plainPassword.second) }}
                {{ form_errors(form.plainPassword.second) }}



            <button class="button" type="submit"> Ajouter l'utilisateur </button>

            {{ form_end(form) }}
         </div>
    </section>

{% endblock %}

