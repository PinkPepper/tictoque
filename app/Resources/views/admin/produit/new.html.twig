{% extends 'menuAdmin.html.twig' %}

{% block body %}
    <section class="user_content" >
    <container>
        <div class="user_form">
            <h1>Ajouter un produit</h1>

            <a href="{{ path('produit_index_admin') }}"><button class="button_p add_product">Retour<img type="svg" src="{{ asset('img/puce-right.svg') }}"></button></a>   

            {{ form_start(form, { 'attr': {'class': 'form-group' } }) }}
                <label>Nom</label>
                <div>
                {{ form_widget(form.nom) }}
                {{  form_errors(form.nom) }}
                </div>

                <label>Description</label>
                <div>
                {{ form_widget(form.description) }}
                {{  form_errors(form.description) }}
                </div>

                <label>Type</label>
                <div>
                <div class="input-field">
                {{ form_widget(form.type) }}
                {{  form_errors(form.type) }}
                </div>

                <label>DatePeremption</label>
                <div>
                {{ form_widget(form.datePeremption) }}
                {{  form_errors(form.datePeremption) }}
                </div>

                <label>Prix</label>
                <div>
                {{ form_widget(form.prix) }}
                {{  form_errors(form.prix) }}
                </div>

                <label>Quantit√©</label>
                <div>
                {{ form_widget(form.quantite) }}
                {{  form_errors(form.quantite) }}
                </div>

                <label>Image</label>
                <div>
                {{ form_widget(form.file) }}
                {{  form_errors(form.file) }}
                </div>

            <input class="button_m" type="submit" value="Ajouter l'utilisateur" />

            {{ form_end(form) }}


            <ul>
                <li>
                    <a href="{{ path('produit_index_admin') }}">Back to the list</a>
                </li>
            </ul>
        </div>
    </container>
    </section>
{% endblock %}
